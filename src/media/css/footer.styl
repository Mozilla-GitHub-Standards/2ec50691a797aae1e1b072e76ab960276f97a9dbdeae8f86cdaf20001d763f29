/**
 * Footer styles.
 */

@import 'lib';

$footer-background-color = #BFC2C2;

#site-footer {
    position: absolute;
    bottom: 0;

    width: 100%;
    height: rem(8);
}

.footer {
    padding: rem(2.5) 0;

    text-align: center;

    background-color: $footer-background-color;
}

.footer-link {
    display: inline-block;
    outline: 0;

    font-family: $primary-font-family;
    font-size: rem(2.1);
    line-height: rem(3);
    white-space: nowrap;

    color: $greyscale-white;

    cubic-bezier-transition();

    &:hover,
    &:focus {
        transform: scale(1.2);
    }
}

.footer-logo {
    position: absolute;
    top: rem(2.4);

    width: rem(11.7);
    height: rem(3.2);
    overflow: hidden;

    text-indent: 100%;
    white-space: nowrap;

    color: transparent;
    background-image: url('../img/powered_by_mozilla.png');

    +ltr() {
        right: rem(17);
    }

    +rtl() {
        left: rem(17);
    }
}
