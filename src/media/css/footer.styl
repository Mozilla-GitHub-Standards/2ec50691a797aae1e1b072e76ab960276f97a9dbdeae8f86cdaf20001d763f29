/**
 * Footer styles.
 */

@import 'lib';

$footer-background-color = #BFC2C2;

#site-footer {
    position: absolute;
    bottom: 0;

    width: 100%;
    height: 8rem;
}

.footer {
    padding: 2.4rem 0 2.1rem;

    text-align: right;

    background-color: $footer-background-color;
}

.footer-logo {
    display: inline-block;
    width: 117px;
    height: 32px;
    margin-right: 17rem;
    overflow: hidden;

    text-indent: 100%;
    white-space: nowrap;

    color: transparent;
    background-image: url('../img/powered_by_mozilla.png');
}
