/**
 * Site-wide styles.
 */

@import 'lib';

* {
    box-sizing: border-box;
}

html,
body {
    height: 100%;
}

html {
    font-family: $primary-font-family;
    font-size: 10px;
}

body {
    overflow: hidden;
}

ul {
    margin: 0;
    padding: 0;
}

.hidden {
    display: none;
}

.clearfix {
    &::before,
    &::after {
        content: '';
        display: table;
    }

    &::after {
        clear: both;
    }
}

main {
    height: 100%;
    padding-bottom: 8rem;
}

.page {
    position: relative;

    height: 100%;
}
