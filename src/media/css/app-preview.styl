/**
 * App preview area styles.
 */

@import 'lib';

$app-preview-background-color = #72C9B0;

.app-preview {
    position: absolute;
    top: 0;
    left: 0;

    display: flex;
    justify-content: space-around;

    width: 100%;
    height: 46.6rem;

    background-color: $app-preview-background-color;
    background-image: url('../img/pattern_overlay.png');
    background-size: cover;

    +ltr() {
        padding: 7.2rem 18.5rem 6.9rem 15rem;
    }

    +rtl() {
        padding: 7.2rem 15rem 6.9rem 18.5rem;
    }
}

.app-preview-suggested {
    position: absolute;
    top: 1.6rem;
    z-index: 1;

    display: flex;
    height: 4.2rem;

    font-size: 1.9rem;
    line-height: 4.2rem;
    white-space: nowrap;

    color: $greyscale-white;

    &::before {
        width: 25px;

        font-size: 4.2rem;
    }

    .flag {
        position: absolute;
        top: 0;

        width: 4rem;
        height: 4.2rem;

        background-image: url('../img/flag_R.png');
        background-size: cover;
    }

    +ltr() {
        left: 0;

        padding: 0 .5rem 0 1rem;

        background: linear-gradient(90deg,
                                    $suggested-star-color,
                                    $suggested-flag-color);

        &::before {
            margin-right: .5rem;
        }

        .flag {
            right: -4rem;
        }
    }


    +rtl() {
        right: 0;

        padding: 0 1rem 0 .5rem;

        background: linear-gradient(90deg,
                                    $suggested-flag-color,
                                    $suggested-star-color);

        &::before {
            margin-left: .5rem;
        }

        .flag {
            left: -4rem;

            transform: scaleX(-1);
        }
    }

    // chrome only
    @supports (-webkit-appearance:none) {
        +rtl() {
            &::before {
                text-indent: -36.375rem;
            }
        }
    }
}

.app-preview-detail {
    position: relative;

    padding-top: 1rem;
    overflow: hidden;

    color: $greyscale-white;

    .name,
    .provider {
        overflow: hidden;

        white-space: nowrap;
        text-overflow: ellipsis;
    }

    .name {
        height: 6.4rem;
        margin: 0;
        padding-bottom: 1.2rem;

        font-size: 5.2rem;
        font-weight: normal;
    }

    .provider {
        height: 6.3rem;
        padding-bottom: 4rem;

        font-size: 2.3rem;
        white-space: nowrap;

        color: $greyscale-white;
    }

    .description {
        height: 3.1rem * 6;
        overflow: hidden;

        font-size: 2.6rem;
        line-height: 3.1rem;

        a {
            color: $greyscale-white;

            text-decoration: none;
        }
    }

    +ltr() {
        .name,
        .provider {
            margin-right: 12rem;
        }
    }

    +rtl() {
        .name,
        .provider {
            margin-left: 12rem;
        }
    }
}

.app-preview-image {
    flex: none;
    display: flex;
    justify-content: flex-end;

    width: 57.5rem;
    height: 100%;
    border-radius: .6rem;
    overflow: hidden;

    color: transparent;

    transition: opacity 1s;

    &.invisible {
        opacity: 0;
    }

    img {
        width: auto;
        height: 100%;
        border-radius: .6rem;
    }

    +ltr() {
        margin-left: 12rem;
    }

    +rtl() {
        margin-right: 12rem;
    }
}
