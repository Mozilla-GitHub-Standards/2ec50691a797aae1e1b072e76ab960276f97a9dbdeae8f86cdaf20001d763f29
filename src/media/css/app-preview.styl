/**
 * App preview area styles.
 */

@import 'lib';

$app-preview-background-color = #72C9B0;

.app-preview {
    position: absolute;
    top: 0;
    left: 0;

    width: 100%;
    height: 46.6rem;
    padding: (7.2 / 192) * 100% 18.5rem (6.9 / 192) * 100% 15rem;

    background-color: $app-preview-background-color;
    background-image: url('../img/pattern_overlay.png');
}

.app-preview-suggested {
    position: absolute;
    top: 1.6rem;
    left: 0;
    z-index: 1;

    padding: 0 .5rem 0 1rem;

    font-size: 1.9rem;
    line-height: 4.2rem;

    color: $greyscale-white;
    background: linear-gradient(90deg,
                                $suggested-star-color,
                                $suggested-flag-color);

    &::before {
        float: left;
        margin-right: .5rem;

        font-size: 4.2rem;
    }

    .flag {
        position: absolute;
        top: 0;
        right: -4rem;

        width: 4rem;
        height: 4.2rem;

        background-image: url('../img/flag_R.png');
    }
}

.app-preview-image {
    float: right;
    width: (57.5 / 158.5) * 100%;
    height: 100%;
    min-height: 20rem;
    border-radius: .6rem;
    overflow: hidden;

    text-align: right;

    color: transparent;

    transition: opacity 1s;

    &.invisible {
        opacity: 0;
    }

    img {
        width: auto;
        height: 100%;
        border-radius: .6rem;
    }
}

.app-preview-detail {
    position: relative;

    width: (89 / 158.5) * 100%;
    height: 100%;
    min-height: 20rem;
    padding-top: 1rem;
    overflow: hidden;

    color: $greyscale-white;

    .name,
    .provider {
        margin-right: 12rem;
        overflow: hidden;

        white-space: nowrap;
        text-overflow: ellipsis;
    }

    .name {
        height: 6.4rem;
        margin-top: 0;
        margin-bottom: 0;
        padding-bottom: 1.2rem;

        font-size: 5.2rem;
        font-weight: normal;
    }

    .provider {
        height: 6.3rem;
        padding-bottom: 4rem;

        font-size: 2.3rem;
        white-space: nowrap;

        color: $greyscale-white;
    }

    .description {
        height: 19rem;
        overflow: hidden;

        font-size: 2.6rem;
        line-height: 3.1rem;

        a {
            color: $greyscale-white;

            text-decoration: none;
        }
    }
}
