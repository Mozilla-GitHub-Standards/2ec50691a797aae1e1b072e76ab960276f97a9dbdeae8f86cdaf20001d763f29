/**
 * Privacy Notice styles.
 */

@import 'lib';

$privacy-content-height = 70rem;
$privacy-background-color = #E0E2E4;
$privacy-font-color = #4D4D4D;
$privacy-scrollbar-color = #CACCCE;

.privacy-container {
    position: fixed;
    top: 0;
    left: 0;

    width: 100%;
    height: 100%;

    background-color: $privacy-background-color;
}

.privacy-window {
    position: absolute;
    top: 50%;
    left: 50%;

    width: (161 / 192) * 100%;
    transform: translate(-50%, -50%);

    color: $privacy-font-color;
}

.privacy-content {
    max-height: $privacy-content-height;
    margin: 0 -3rem 11rem 0;
    padding-right: 3rem;
    outline: none;
    overflow: hidden;

    .scrollable {
        cubic-bezier-transition();
    }

    .title {
        margin: 0 0 7rem;

        font-family: $light-italic-font-family;
        font-size: 7rem;
        font-weight: normal;
        text-align: center;
    }

    .statement {
        font-size: 2.6rem;
        line-height: 3.6rem;
    }

    .item {
        margin-bottom: 3.6rem;

        list-style: none;
    }

    a {
        outline: none;

        font-weight: bold;

        color: $privacy-font-color;

        cubic-bezier-transition();

        &.focused {
            font-size: 3.12rem;
        }
    }

    .scrollbar {
        position: absolute;
        top: 0;
        right: -3rem;

        width: 2rem;
        height: $privacy-content-height;
        outline: none;

        background-color: $privacy-scrollbar-color;
    }

    .holder {
        position: absolute;
        top: .3rem;
        left: .5rem;

        width: 1rem;
        height: 7.6rem;
        border-radius: 1rem;

        background-color: $greyscale-white;

        cubic-bezier-transition();
    }

    .indicator {
        position: absolute;
        left: .3rem;
        bottom: .3rem;

        width: 1.4rem;
        height: 5.6rem;

        background-image: url('../img/indicator.png');
    }
}

.privacy-button {
    display: block;
    margin: 0 auto;

    font-family: $primary-italic-font-family;
}
